<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.News" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1FB598</item>
        <item name="colorPrimaryVariant">#1FB598</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">#969793</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lighterGrey</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- App Background. -->
        <item name="background">@drawable/background</item>
        <item name="backgroundColor">@color/white</item>
    </style>
</resources>